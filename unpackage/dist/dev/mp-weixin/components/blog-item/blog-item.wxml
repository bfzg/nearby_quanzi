<view class="blogitem"><view class="head"><view class="userinfo"><view class="avatar"><image src="{{item.user_id[0].avatar_file?item.user_id[0].avatar_file.url:'../../static/images/user-default.jpg'}}" mode="aspectFill"></image></view><view class="name">{{item.user_id[0].nickname?item.user_id[0].nickname:item.user_id[0].username}}</view><view class="time"><uni-dateformat vue-id="0eeac6c4-1" date="{{item.publish_date}}" format="MM月dd hh:mm" threshold="{{[60000,3600000*24*30]}}" bind:__l="__l"></uni-dateformat></view></view><view class="more"><text class="iconfont icon-ellipsis"></text></view></view><view class="body"><view data-event-opts="{{[['tap',[['goDetail',['$event']]]]]}}" class="title" bindtap="__e">{{item.title}}</view><view data-event-opts="{{[['tap',[['goDetail',['$event']]]]]}}" class="text" bindtap="__e"><view class="t">{{item.description}}</view></view><view class="piclist"><block wx:for="{{item.picurls}}" wx:for-item="j" wx:for-index="index" wx:key="index"><view class="pic"><image src="{{j}}" mode="aspectFill" data-event-opts="{{[['tap',[['clickPic',[index]]]]]}}" bindtap="__e"></image></view></block></view></view><view class="info"><view class="box"><text class="iconfont icon-a-27-liulan"></text><text>{{item.view_count}}</text></view><view data-event-opts="{{[['tap',[['goDetail',['$event']]]]]}}" class="box" bindtap="__e"><text class="iconfont icon-a-5-xinxi"></text><text>{{item.comment_count?item.comment_count:'评论'}}</text></view><view class="box"><text class="iconfont icon-a-106-xihuan"></text><text>{{item.like_count?item.like_count:'点赞'}}</text></view></view></view>